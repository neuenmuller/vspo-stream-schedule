{
  "functions": {
    "source": "functions",
    "ignore": [
      "**/node_modules/**",
      "**/src/**",
      "**/types/**",
      "**/arc/**",
      ".eslintrc.js",
      ".gitignore",
      "tsconfig.dev.json",
      "tsconfig.json",
      "env.d.ts",
      "*.log",
      ".secret.local",
      "*.http"
    ]
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/functions/**"
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  }
}